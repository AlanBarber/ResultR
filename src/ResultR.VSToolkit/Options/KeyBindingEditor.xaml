<UserControl x:Class="ResultR.VSToolkit.Options.KeyBindingEditor"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
mc:Ignorable="d" 
d:DesignHeight="100" d:DesignWidth="400"
Background="#FFF0F0F0">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Go to Handler Keyboard Shortcut" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="Black"/>
            <TextBlock Text="Click the box below and press your desired key combination." 
                       TextWrapping="Wrap" 
                       Foreground="#FF666666" 
                       FontSize="11"/>
            <TextBlock Text="For chord shortcuts (e.g., Ctrl+R, Ctrl+H), press the first combination, release, then press the second."
                       TextWrapping="Wrap" 
                       Foreground="#FF666666" 
                       FontSize="11"
                       Margin="0,2,0,0"/>
        </StackPanel>
        
        <Border Grid.Row="1" 
                BorderThickness="1" 
                BorderBrush="#FF888888"
                Background="White"
                Margin="0,0,0,10">
            <TextBox x:Name="ShortcutTextBox"
                     Text="{Binding ShortcutDisplay, Mode=OneWay}"
                     IsReadOnly="True"
                     FontSize="14"
                     FontFamily="Consolas"
                     Padding="8"
                     BorderThickness="0"
                     Background="White"
                     Foreground="Black"
                     Cursor="Hand"
                     Focusable="True"
                     PreviewKeyDown="ShortcutTextBox_PreviewKeyDown"
                     PreviewKeyUp="ShortcutTextBox_PreviewKeyUp"
                     GotFocus="ShortcutTextBox_GotFocus"
                     LostFocus="ShortcutTextBox_LostFocus"/>
        </Border>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button x:Name="ClearButton" 
                    Content="Clear" 
                    Padding="15,5" 
                    Margin="0,0,10,0"
                    Background="#FFDDDDDD"
                    Foreground="Black"
                    BorderBrush="#FF888888"
                    Click="ClearButton_Click"/>
            <Button x:Name="ResetButton" 
                    Content="Reset to Default" 
                    Padding="15,5"
                    Background="#FFDDDDDD"
                    Foreground="Black"
                    BorderBrush="#FF888888"
                    Click="ResetButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
