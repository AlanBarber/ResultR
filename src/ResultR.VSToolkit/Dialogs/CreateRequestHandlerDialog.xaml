<Window x:Class="ResultR.VSToolkit.Dialogs.CreateRequestHandlerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
        mc:Ignorable="d"
        Title="ResultR - Create Request / Handler..."
        Width="450"
        Height="220"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        toolkit:Themes.UseVsTheme="True">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="Enter request name:" 
                   FontWeight="SemiBold"
                   Margin="0,0,0,8"/>
        
        <TextBox Grid.Row="1" 
                 x:Name="RequestNameTextBox"
                 Padding="6"
                 FontSize="14"
                 PreviewTextInput="RequestNameTextBox_PreviewTextInput"
                 TextChanged="RequestNameTextBox_TextChanged"/>
        
        <TextBlock Grid.Row="2" 
                   x:Name="ValidationMessage"
                   Text=""
                   Foreground="#FFE51400"
                   FontSize="11"
                   Margin="0,4,0,0"
                   Visibility="Collapsed"/>
        
        <TextBlock Grid.Row="3"
                   Text="This will create: {Name}Request and {Name}Handler"
                   x:Name="PreviewText"
                   Opacity="0.6"
                   FontSize="11"
                   VerticalAlignment="Top"
                   Margin="0,12,0,0"/>
        
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button x:Name="OkButton" 
                    Content="OK" 
                    Width="80" 
                    Padding="5"
                    IsDefault="True"
                    IsEnabled="False"
                    Click="OkButton_Click"
                    Margin="0,0,10,0"/>
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Width="80" 
                    Padding="5"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
